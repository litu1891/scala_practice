object sunctionExamples {
  def abs(x:Int) = if (x < 0) -x else x
  abs(-5)
  
  def fac(n:Int) = {
  	var result = 1
  	for ( i <- 1 to n)
  	result *= i
  	result
  }
  fac(5)
  
  def factorial(n:Int):Int = if (n <= 0) 1 else n * factorial(n-1)
  factorial(5)
  
  def printname(firstName :String, lastName:String){
  	println(firstName + " " + lastName)
  }
  printname("priy","ranjan")
  printname(firstName = "Priya", lastName = "Ranjan")
}